{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "command": {
    "publish": {
      "ignoreChanges": [
        "ignored-file",
        "*.md",
        "*.stories.js"
      ],
      "message": "chore(release): publish"
    },
    "bootstrap": {
      "npmClientArgs": ["--no-lockfile"]
    }
  },
  "version": "independent"
}
